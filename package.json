{
  "name": "ghostbot",
  "private": true,
  "scripts": {
    "build:contracts": "cd packages/contracts && forge build",
    "build:sdk": "cd packages/sdk && pnpm run build",
    "build:bot": "cd packages/bot && pnpm run build",
    "generate:abis": "node scripts/copy-abis.mjs",
    "test:contracts": "cd packages/contracts && forge test -vvv",
